// Place your key bindings in this file to override the defaults
[
    // Terminal
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.focusPrevious"
    },
    {
        "key": "ctrl+shift+m",
        "command": "workbench.action.terminal.focusNext"
    },
    {
        "key": "ctrl+shift+b",
        "command": "workbench.action.terminal.kill"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focus"
    },
    {
        // close terminal and go to editor
        "key": "ctrl+k",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.toggleTerminal",
                "workbench.action.focusActiveEditorGroup"
            ]
        },
        "when": "terminalFocus"
    },

    // File Tree
    {
        // if focus IS NOT in sidebar: toggle sidebar, focus sidebar
        "key": "ctrl+0",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.focusSideBar",
            ]
        },
        "when": "!sideBarFocus"
    },
    {
        // if focus IS in sidebar: focus editor, toggle sidebar
        "key": "ctrl+0",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.focusActiveEditorGroup",
                "workbench.action.toggleSidebarVisibility",
            ]
        },
        "when": "sideBarFocus"
    },

    // filesExplorerFocus is True when File Explorer has keyboard focus
    // !inputFocus prevents letters from triggering their mapping when creating/renaming files 
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus" 
    },
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+n",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },

    // show function info on hover
    {
        "key": "shift+k",
        "command": "editor.action.showHover",
        "when": "editorHasSignatureHelpProvider && editorTextFocus"
    },
    
    // Run python file in terminal
    {
        "key": "shift+space",
        "command": "python.execInTerminal"
    }
]
